    "slate-history": "^0.113.1",
    "slate-react": "^0.117.4"
  },
  "devDependencies": {
    "@types/node": "^24.0.14",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "appium": "^2.19.0",
    "appium-chromium-driver": "^1.5.1",
    "appium-uiautomator2-driver": "^4.2.5",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vitest": "^3.2.4",
    "webdriverio": "^9.17.0"
